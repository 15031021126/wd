<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_12"
    android:background="@drawable/vpitemsel"
   android:paddingRight="@dimen/dp_12"
    android:orientation="vertical">

    <TextView
        android:id="@+id/jkzx_three_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sp_10"
        android:text="没吃你吃抽你"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jkzx_three_img_one"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_74"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/jkzx_three_img_two"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_74"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/jkzx_three_img_three"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_74"
            android:layout_weight="1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_12">

        <TextView
            android:id="@+id/jkzx_three_auther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="作者"
            android:textColor="@color/myblack"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/jkzx_three_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="事件"
            android:textColor="@color/myblack"
            android:textSize="@dimen/sp_10" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="#F3F3F3" />
</LinearLayout>