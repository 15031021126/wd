<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.actv.user.RegisterActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_bg" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/dp_67"
        android:layout_height="@dimen/dp_64"
        android:layout_marginTop="@dimen/dp_46"
        android:src="@mipmap/logowhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <android.support.v7.widget.CardView
        android:id="@+id/c"
        android:alpha="0.5"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_218"
        android:layout_marginTop="@dimen/dp_175"
        app:cardCornerRadius="@dimen/dp_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"/>

    <android.support.v7.widget.CardView
        android:alpha="0.7"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_218"
        android:layout_marginTop="@dimen/dp_170"
        app:cardCornerRadius="@dimen/dp_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"/>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        app:cardCornerRadius="@dimen/dp_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/login_icon_mail_n" />

                <EditText
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:layout_toRightOf="@id/email_icon"
                    android:id="@+id/email"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:background="#00000000"
                    android:hint="请输入邮箱"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/mywhite"
                    android:background="@drawable/login_shape"
                    android:textSize="@dimen/sp_10"
                    android:layout_toRightOf="@id/email"
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_20"
                    android:text="获取验证码"
                    android:id="@+id/email_bt"/>
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_220"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#f2f2f2" />

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/code_icon"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/register_icon_verification_code_n"/>
                <EditText
                    android:id="@+id/code"
                    android:singleLine="true"
                    android:maxLength="6"
                    android:layout_toRightOf="@id/code_icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:background="#00000000"
                    android:hint="请输入验证码"
                    android:textColorHint="@color/mygray"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_220"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#f2f2f2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <ImageView
                    android:id="@+id/lock"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/login_icon_lock_n" />

                <EditText
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="16"
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_toRightOf="@id/lock"
                    android:background="#00000000"
                    android:hint="密码0-16位"
                    android:textColorHint="@color/mygray"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/eye"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/password"
                    android:src="@mipmap/login_icon_hide_password_n" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_220"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#f2f2f2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <ImageView
                    android:id="@+id/lock2"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/login_icon_lock_n" />

                <EditText
                    android:id="@+id/password2"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="@dimen/dp_24"
                    android:maxLength="16"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_toRightOf="@id/lock2"
                    android:background="#00000000"
                    android:hint="请再次输入密码"
                    android:textColorHint="@color/mygray"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/eye2"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/password2"
                    android:src="@mipmap/login_icon_hide_password_n" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_220"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#f2f2f2" />
            <TextView
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_width="@dimen/dp_230"
                android:layout_height="@dimen/dp_36"
                android:layout_marginTop="@dimen/dp_36"
                android:background="@drawable/login_shape"
                android:gravity="center"
                android:text="注册"
                android:textColor="@color/mywhite"
                android:textSize="@dimen/sp_14"
                android:id="@+id/register"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>