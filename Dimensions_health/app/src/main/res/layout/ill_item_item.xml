<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="@dimen/dp_16"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ill_item_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:textColor="@color/myblack"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/ill_item_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12月"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/myblack"
            android:layout_below="@id/ill_item_days"
            android:layout_toRightOf="@id/ill_item_days"/>

        <RelativeLayout
            android:background="@drawable/ill_shape"
            android:layout_toRightOf="@id/ill_item_month"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ill_item_title"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/myblack"
                android:textSize="@dimen/sp_14"
                android:text="口腔溃疡可能是癌症"/>

            <TextView
                android:id="@+id/ill_item_context"
                android:layout_below="@id/ill_item_title"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/myblack"
                android:text="22222222222222222222222222222222"/>

            <TextView
                android:id="@+id/ill_item_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/myblue"
                android:text="查看评论"
                android:layout_below="@id/ill_item_context"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_6" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>