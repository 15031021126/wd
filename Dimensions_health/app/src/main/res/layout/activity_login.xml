<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.actv.user.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_bg" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/dp_67"
        android:layout_height="@dimen/dp_64"
        android:layout_marginTop="@dimen/dp_46"
        android:src="@mipmap/logowhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/c"
        android:alpha="0.5"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_218"
        android:layout_marginTop="@dimen/dp_70"
        app:cardCornerRadius="@dimen/dp_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"/>

    <android.support.v7.widget.CardView
        android:alpha="0.7"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_218"
        android:layout_marginTop="@dimen/dp_65"
        app:cardCornerRadius="@dimen/dp_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"/>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_218"
        android:layout_marginTop="@dimen/dp_60"
        app:cardCornerRadius="@dimen/dp_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/login_icon_mail_n" />

                <EditText
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:background="#00000000"
                    android:hint="请输入邮箱"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_220"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#f2f2f2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <ImageView
                    android:id="@+id/lock"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/login_icon_lock_n" />

                <EditText
                    android:singleLine="true"
                    android:maxLength="16"
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_toRightOf="@id/lock"
                    android:background="#00000000"
                    android:hint="请输入密码"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/eye"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/password"
                    android:src="@mipmap/login_icon_hide_password_n" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_220"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#f2f2f2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:layout_marginTop="@dimen/dp_36"
                android:background="@drawable/login_shape"
                android:gravity="center"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14"
                android:id="@+id/login"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
<LinearLayout
    android:orientation="horizontal"
    app:layout_constraintTop_toBottomOf="@id/c"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="@dimen/dp_236"
    android:layout_height="@dimen/dp_36">
    <!--<ImageView-->
        <!--android:layout_width="@dimen/dp_24"-->
        <!--android:layout_height="@dimen/dp_24"-->
        <!--android:src=""/>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_36"
        android:background="@drawable/login_shape"
        android:gravity="center"
        android:text="账号或密码错误"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:id="@+id/mes"/>
</LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/c"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:text="忘记密码"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#ffffff"
            android:id="@+id/reset_password"/>
        <TextView
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无账号?立即注册"
            android:textSize="@dimen/sp_12"
            android:id="@+id/register"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_64"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_86"
        android:layout_marginRight="@dimen/dp_86"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_1"
            android:background="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="其他登陆方式"/>
        <View
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_1"
            android:background="#ffffff"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/weixin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:src="@mipmap/login_icon_weixin_white_n"/>
</android.support.constraint.ConstraintLayout>