<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".view.actv.home.ManyconsultationsActivity">

    <RelativeLayout
        android:id="@+id/details_cc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_25"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/advisory_more_heah"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sp_12"
            android:background="@drawable/vpitemsel"
            android:src="@mipmap/common_icon_keyboard_n" />

        <TextView
            android:id="@+id/advisory_more_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=" "
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/advisory_more_rbbell"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/vpitemsel"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:src="@mipmap/common_nav_message_black_n" />
    </RelativeLayout>



        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/advisory_more_xrecyc"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advisory_more_xrecyc"
            android:background="#fff"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_60"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/cen"
                    android:background="#999999" />

                <View
                    android:id="@+id/cen"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="#999999" />


                <View
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/cen"
                    android:background="#999999" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text="抱歉,没有更多咨询啦"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


</LinearLayout>